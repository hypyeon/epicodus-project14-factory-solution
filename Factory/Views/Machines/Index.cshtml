@{
  Layout = "_Layout";
}

@using Factory.Models

<div>
  <h2>Machines</h2>

  @if (@Model.Count == 0)
  {
    <h3>No machine registered in the system.</h3>
    <p>Click @Html.ActionLink("here", "Create") to add new machine.</p>
  } 
  else {
    <div>
      @foreach(Machine mac in Model)
      {
        <div>@Html.ActionLink($"{mac.Name}", "Details", new { id = mac.MachineId })</div>
      }
    </div>
    <div class="buttons">
      <p>@Html.ActionLink("Register New Machine", "Create")</p>
    </div>
  }
  <div class="buttons">
    <p>@Html.ActionLink("Main Page", "Index", "Home")</p>
  </div>
</div>
