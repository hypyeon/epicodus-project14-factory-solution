@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div>
  <h2>Edit Machine Info</h2>
  <hr />
  <h4>Current Information:</h4>
  <p>@Html.DisplayFor(model => model.Name) | @Html.DisplayFor(model => model.Difficulty)</p>

  <div class="form">
    <h4>Update Info here: </h4>
    @using (Html.BeginForm())
    {
      <div class="form-div">
        @Html.HiddenFor(model => model.MachineId)
        <div>
          @Html.LabelFor(model => model.Name, "Name: ")
          @Html.EditorFor(model => model.Name)
        </div>
        <div>
          @Html.LabelFor(model => model.Difficulty, "Phone: ")
          @Html.EditorFor(model => model.Difficulty)
        </div>
        <div>
          @Html.LabelFor(model => model.Engineer, "Engineers assigned: ")
          @Html.DropDownList("EngineerId")
        </div>
      </div>
      <input type="submit" value="Update" />
    }
  </div>
  <div class="buttons">
    <p>@Html.ActionLink($"Back to {Model.Name}'s Info", "Details", new { id = Model.ClientId })</p>
    <p>@Html.ActionLink("Back to Engineer List", "Index")</p>
  </div>
</div>