@{
  Layout = "_Layout";
}

@using Factory.Models;

<div>
  <h2>Engineers</h2>

  @if (@Model.Count == 0)
  {
    <h3>No engineer registered in the system. </h3>
    <p>Click @Html.ActionLink("here", "Create") to add new engineer.</p>
  } 
  else {
    <div id="stylist-list">
      @foreach(Engineer eng in Model)
      {
        <div>@Html.ActionLink($"{eng.Name}", "Details", new { id = eng.EngineerId })</div>
      }
    </div>

    <div class="buttons">
      <p>@Html.ActionLink("Register New Engineer", "Create")</p>
    </div>
  }
  <div class="buttons">
    <p>@Html.ActionLink("Main Page", "Index", "Home")</p>
  </div>
</div>